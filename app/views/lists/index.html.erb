<div class="row align-items-center">
  <h1>My Lists</h1>
  <%= link_to 'Add List', new_list_path, class: 'btn btn-primary ml-4' %>
</div>

<div class="row mt-3">
  <% @lists.each do |list| %>
    <div class="col-4">
      <% if list.photo.attached? %>
        <div class="card-category m-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
      <% else %>
        <div class="card-category m-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://wallpaperesque.com/wp-content/uploads/plixpapers1503/black_and_white_movie_wallpaper_background_34360.jpg')">
      <% end %>
        <%= link_to list.name, list_path(list), style: 'color: white' %>
      </div>
    </div>
  <% end %>
</div>
